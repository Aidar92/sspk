<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="css/index.css")        
        title SSPC
    body    
        header.container-fluid
            button#logout.btn.btn-primary.btn-sm.mb-3.float-right Logout
        .row.container-fluid
            section.col-md-4
                img#scheme.img-fluid(src="img/scheme.svg")
            section.col-md-8
                canvas#chart.chart
                .row.mx-auto
                    .form-group.row.col-md-3
                        input#channels(type="text", name="channels", placeholder="Input channels through ;")
                    .form-group.row.col-md-3
                        input#maxX(type="number", name="maxX", placeholder="Input max X value")
                    .form-group.row.col-md-2
                        button#channelsOk.btn.btn-primary.btn-sm OK
        section.container-fluid
            .row
                form(oninput="result0.value = parseFloat(att0.value);", onchange="result0.value = parseFloat(att0.value);").form-group.col-md-2.text-center
                    label(for="att0") Main Gain
                    input#att0.form-control-range(type="range", name="att0", min="-15.5", max="0", value="-15.5", step="0.5")
                    output#lbl0(for="att0", name="result0")
                form(oninput="result1.value = parseFloat(att1.value);", onchange="result1.value = parseFloat(att1.value);").form-group.col-md-2.text-center
                    label(for="att1") 17.25 GHz
                    input#att1.form-control-range(type="range", name="att1", min="-15", max="0", value="-15")
                    output#lbl1(for="att1", name="result1")
                form(oninput="result2.value = parseFloat(att2.value);").form-group.col-md-2.text-center
                    label(for="att2") 15.75 GHz
                    input#att2.form-control-range(type="range", name="att2", min="-15", max="0", value="-15")
                    output#lbl2(for="att2" name="result2")
                form(oninput="result3.value = parseFloat(att3.value);").form-group.col-md-3.text-center
                    label(for="att3") 14.25 GHz
                    input#att3.form-control-range(type="range", name="att3", min="-15", max="0", value="-15")
                    output#lbl3(for="att3", name="result3")
                form(oninput="result4.value = parseFloat(att4.value);").form-group.col-md-2.text-center
                    label(for="att4") 12.75 GHz
                    input#att4.form-control-range(type="range", name="att4", min="-15", max="0", value="-15")
                    output#lbl4(for="att4", name="result4")
                form(oninput="result5.value = parseFloat(att5.value);").form-group.col-md-2.text-center
                    label(for="att5") 11.25 GHz
                    input#att5.form-control-range(type="range", name="att5", min="-15", max="0", value="-15")
                    output#lbl5(for="att5", name="result5")
                form(oninput="result6.value = parseFloat(att6.value);").form-group.col-md-2.text-center
                    label(for="att6") 9.75 GHz
                    input#att6.form-control-range(type="range", name="att6", min="-15", max="0", value="-15", step="0.6")
                    output#lbl6(for="att6", name="result6")
                form(oninput="result7.value = parseFloat(att7.value);").form-group.col-md-2.text-center
                    label(for="att7") 8.25 GHz
                    input#att7.form-control-range(type="range", name="att7", min="-15", max="0", value="-15")
                    output#lbl7(for="att7", name="result7")
                form(oninput="result8.value = parseFloat(att8.value);").form-group.col-md-2.text-center
                    label(for="att8") 6.75 GHz
                    input#att8.form-control-range(type="range", name="att8", min="-15", max="0", value="-15")
                    output#lbl8(for="att8", name="result8")
                form(oninput="result9.value = parseFloat(att9.value);").form-group.col-md-2.text-center
                    label(for="att9") 5.25 GHz
                    input#att9.form-control-range(type="range", name="att9", min="-15", max="0", value="-15")
                    output#lbl9(for="att9", name="result9")
                form(oninput="result10.value = parseFloat(att10.value);").form-group.col-md-2.text-center
                    label(for="att10") 3.75 GHz
                    input#att10.form-control-range(type="range", name="att10", min="-15", max="0", value="-15", oninput="result10.value = parseFloat(value)")
                    output#lbl10(for="att10", name="result10")
                .row.col-md-11.col-md-offset-1     
                    .form-group.col-md-3
                            label.switch-light.switch-material
                                input#ngCheck(type="checkbox")
                                strong NG
                                span
                                    span Off
                                    span On
                                    a
                            label.switch-light.switch-holo
                                input#ngPolCheck(type="checkbox") 
                                span
                                    span Left
                                    span Right
                                    a                            
                    .form-group.col-md-3
                        label.switch-light.switch-material
                            input#mdCheck(type="checkbox")
                            strong MD
                            span
                                span Off
                                span On
                                a
                        label.switch-light.switch-holo
                            input#mdPolCheck(type="checkbox") 
                            span
                                span Left
                                span Right
                                a  
                            
                    .form-group.col-md-6.text-center
                        label(for="syncFreq") Sync Frequency
                        input#syncRange(type="range", name="syncRange", min="0", max="7", value="3", oninput="resultSyncRange.value = parseInt(value)")
                        output#syncRangeLbl(for="syncRange", name="resultSyncRange")
                    .col-md-10.col-md-offset-1
                        .row.text-center
                            .col-md-4
                                button#sendBtn.btn.btn-default.btn-primary.btn-block(value="Write") Write
                            .col-md-4
                                button#getBtn.btn.btn-default.btn-primary.btn-block(value="Write") Read
                
                
        
        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js")
        script(src="js/index.js")
